<%= form_for :record, url: record_path(@record), method: :put do |f| %>

<% if @record.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@record.errors.count, "error") %>
      prohibited this article from being saved:
    </h2>

    <ul>
      <% @record.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>

  </div>
<% end %>


  <p>
    <%= f.label :album_title %><br>
    <%= f.text_field :album_title %>
  </p>
 
  <p>
    <%= f.label :artist %><br>
    <%= f.text_field :artist %>
  </p>
 
  <p>
    <%= f.label :genre %><br>
    <%= f.text_field :genre %>
  </p>

  <p>
    <%= f.label :release_year %><br>
    <%= f.text_field :release_year %>
  </p>

  <p>
    <%= f.label :owner_opinion %><br>
    <%= f.text_area :owner_opinion %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>