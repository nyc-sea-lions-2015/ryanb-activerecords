<%= form_for @user do |f| %>

<p>
  Register for activeRecords
</p>

<p>
  <%= f.label :username %><br>
  <%= f.text_field :username %>
</p>

<p>
  <%= f.label :password %><br>
  <%= f.password_field :password %>
</p>

<p>
  <%= f.label :password %><br>
  <%= f.password_field :password_confirmation %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>